<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Capstone - National Park Service</title>

    <!-- StyleSheets-->

    <link rel="stylesheet" type="text/css" href="~/Content/semantic.css">
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="~/Content/semantic.min.js"></script>
    <script src="~/Content/semantic.js"></script>
</head>
@{
    string currenUrl = HttpContext.Current.Request.Url.AbsolutePath;
    string activateParkClass = String.Empty;
    string activateSurveyClass = String.Empty;
}
<body>
    <div>
        <div class="ui inverted segment">
            <div class="ui inverted secondary pointing menu">
                @if (currenUrl == "/Home/ParkList") { activateParkClass = "active"; }
                <a href="@Url.Action("ParkList", "Home")" class="item @activateParkClass">
                    See all Parks
                </a>
                @if (currenUrl == "/Survey/SurveyList") { activateSurveyClass = "active"; }
                <a class="item  @activateSurveyClass" href="@Url.Action( "SurveyList", "Survey")">Survey</a>
                <a class="item" href="@Url.Action( "About", "About")">
                    About
                </a>
            </div>
        </div>

        <div class="ui  container  segment">
            @RenderBody()
            <footer>
                <p style="text-align:center;">&copy; 2017 - @DateTime.Now.Year - National Park Weather Service Application</p>
                <div>
                    @RenderSection("AfterCopyright", false)
                </div>
            </footer>
        </div>
    </div>

    <script>
        $('.ui.modal')
            .modal('show')
            ;</script>
</body>
</html>